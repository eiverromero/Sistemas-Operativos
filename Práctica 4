#include <unistd.h>
#include <string.h>
#include <stdio.h>

int main() {
    int fd[2];              // fd[0] lectura, fd[1] escritura
    pid_t pid;
    char mensaje[] = "Hola desde el padre!";
    char buffer[100];

    pipe(fd);               // Crear pipe
    pid = fork();           // Crear proceso hijo

    if (pid > 0) { // Proceso padre
        close(fd[0]);       // Cierra extremo de lectura
        write(fd[1], mensaje, strlen(mensaje) + 1);
        close(fd[1]);
    } else {        // Proceso hijo
        close(fd[1]);       // Cierra extremo de escritura
        read(fd[0], buffer, sizeof(buffer));
        printf("Hijo recibi√≥: %s\n", buffer);
        close(fd[0]);
    }

    return 0;
}
